<?xml version="1.0" encoding="UTF-8"?>
<routes>
    <vType accel="1.0" id="Car" decel="5.0" sigma="0.0" length="2.0" maxSpeed="100.0" />
    <vType accel="1.0" id="Bus" decel="5.0" sigma="0.0" length="12.0" maxSpeed="1.0" />

    <!-- Route 0 -->
    <route id="route0" edges="in 2to3 3to4"/>
    <!-- Route 1 -->
    <route id="route1" edges="in 2to3 3to4"/>
    <!-- Route 2 -->
    <route id="route2" edges="intramp 2to3"/>

    <!-- Function to generate vehicles -->
    <route id="generateVehicles">
        <vehicle id="$ID" type="$TYPE" route="$ROUTE" depart="$DEPART" color="1,1,0" departLane="best"/>
    </route>

    <!-- Generate vehicles for route0 -->
    <for var="i" from="0" to="99" step="1">
        <include route="generateVehicles">
            <param key="ID" value="veh${i}"/>
            <param key="TYPE" value="Car"/>
            <param key="ROUTE" value="route0"/>
            <param key="DEPART" value="${i}"/>
        </include>
    </for>

    <!-- Generate vehicles for route1 -->
    <for var="i" from="100" to="149" step="1">
        <include route="generateVehicles">
            <param key="ID" value="veh${i}"/>
            <param key="TYPE" value="Car"/>
            <param key="ROUTE" value="route1"/>
            <param key="DEPART" value="${i}"/>
        </include>
    </for>

    <!-- Generate vehicles for route2 -->
    <for var="i" from="200" to="249" step="1">
        <include route="generateVehicles">
            <param key="ID" value="veh${i}"/>
            <param key="TYPE" value="Bus"/>
            <param key="ROUTE" value="route2"/>
            <param key="DEPART" value="${i}"/>
        </include>
    </for>
</routes>
